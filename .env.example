# .env.example

APP_NAME="GraficaModerna"
APP_ENV=local
APP_KEY=base64:...
APP_DEBUG=true
APP_URL=http://localhost

# Configuração de Banco (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=grafica_db
DB_USERNAME=postgres
DB_PASSWORD=secret

# Configuração de Cache (Redis)
CACHE_STORE=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Prefixo da API (Ex: api/v1) - Equivalente ao API_SEGMENT_KEY
API_PREFIX=api/v1

# JWT Settings
JWT_SECRET_KEY=sua_chave_secreta_muito_longa_aqui_64_chars...
JWT_ISSUER=GraficaModernaAPI
JWT_AUDIENCE=GraficaModernaFront

# Melhor Envio
MELHOR_ENVIO_URL=https://sandbox.melhorenvio.com.br
MELHOR_ENVIO_TOKEN=...
MELHOR_ENVIO_USER_AGENT=GraficaModerna/1.0
MELHOR_ENVIO_CLIENT_ID=...
MELHOR_ENVIO_CLIENT_SECRET=...

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Security Peppers
SECURITY_PEPPER_ACTIVE_VERSION=v1
SECURITY_PEPPER_V1=seu_pepper_secreto

# Admin Seed
ADMIN_EMAIL=admin@graficamoderna.com.br
ADMIN_PASSWORD=SenhaForte123!

# SMTP
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=...
SMTP_PASSWORD=...
SMTP_FROM_EMAIL=noreply@graficamoderna.com.br
SMTP_FROM_NAME="Gráfica Moderna"

# CORS (Lista separada por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://graficamoderna.com.br